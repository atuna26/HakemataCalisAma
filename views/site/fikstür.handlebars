                        <tr>
                            <td >{{homeTeam.teamName}}</td>
                            <td  style="text-align: center;">{{awayTeam.teamName}}</td>
                            <td ><input type="date" value="{{#if derbyDate}}{{moment derbyDate}}{{/if}}" name="derbyDate"
                                    id=""></td>
                            <td> <select name="derbyHours" id="">
                                    <option value="09" {{#if (eq derbyHours "09" )}} selected {{/if}}>09</option>
                                    <option value="10" {{#if (eq derbyHours "10" )}} selected {{/if}}>10</option>
                                    <option value="11" {{#if (eq derbyHours "11" )}}selected {{/if}}>11</option>
                                    <option value="12" {{#if (eq derbyHours "12" )}}selected {{/if}}>12</option>
                                    <option value="13" {{#if (eq derbyHours "13" )}}selected {{/if}}>13</option>
                                    <option value="14" {{#if (eq derbyHours "14" )}}selected {{/if}}>14</option>
                                    <option value="15" {{#if (eq derbyHours "15" )}}selected {{/if}}>15</option>
                                    <option value="16" {{#if (eq derbyHours "16" )}}selected {{/if}}>16</option>
                                    <option value="17" {{#if (eq derbyHours "17" )}}selected {{/if}}>17</option>
                                    <option value="18" {{#if (eq derbyHours "18" )}}selected {{/if}}>18</option>
                                    <option value="19" {{#if (eq derbyHours "19" )}}selected {{/if}}>19</option>
                                    <option value="20" {{#if (eq derbyHours "20" )}}selected {{/if}}>20</option>
                                    <option value="21" {{#if (eq derbyHours "21" )}}selected {{/if}}>21</option>
                                    <option value="22" {{#if (eq derbyHours "22" )}}selected {{/if}}>22</option>
                                    <option value="23" {{#if (eq derbyHours "23" )}}selected {{/if}}>23</option>
                                </select>
                                <select name="derbyMinutes" id="">
                                    <option value="00" {{#if (eq derbyMinutes "00" )}}selected {{/if}}>00</option>
                                    <option value="30" {{#if (eq derbyMinutes "30" )}}selected {{/if}}>30</option>

                                </select>
                            </td>
                            <td class="refereeFixture" style="text-align: center;"><select name="middleReferee">
                                    <option value="" disabled selected>Hakem Seçiniz</option>{{#each ../referee}}<option
                                        value="{{_id}}" {{#if (eqIds _id ../middleReferee)}} selected {{/if}}>
                                        {{refereeName}} {{refereeSurName}} </option>{{/each}}
                                </select></td>
                            <td class="refereeFixture" style="text-align: center;"><select name="linemanReferee">
                                    <option value="" disabled selected>Hakem Seçiniz</option>{{#each ../referee}}<option
                                        value="{{_id}}" {{#if (eqIds _id ../linemanReferee)}} selected {{/if}}>
                                        {{refereeName}} {{refereeSurName}} </option>{{/each}}
                                </select></td>
                            <td class="refereeFixture" style="text-align: center;"><select name="secondLinemanReferee">
                                    <option value="" disabled selected>Hakem Seçiniz</option>{{#each ../referee}}<option
                                        value="{{_id}}" {{#if (eqIds _id ../secondLinemanReferee)}} selected {{/if}}>
                                        {{refereeName}} {{refereeSurName}} </option>{{/each}}
                                </select></td>
                            <td class="refereeFixture" style="text-align: center;"><select name="fourthReferee">
                                    <option value="" disabled selected>Hakem Seçiniz</option>{{#each ../referee}}<option
                                        value="{{_id}}" {{#if (eqIds _id ../fourthReferee)}} selected {{/if}}>
                                        {{refereeName}} {{refereeSurName}} </option>{{/each}}
                                </select></td>
                            <td class="refereeFixture" style="text-align: center;"><select name="varReferee">
                                    <option value="" disabled selected>Hakem Seçiniz</option>{{#each ../referee}}<option
                                        value="{{_id}}" {{#if (eqIds _id ../varReferee)}} selected {{/if}}>
                                        {{refereeName}}
                                        {{refereeSurName}} </option>{{/each}}
                                </select></td>
                            <td class="refereeFixture" style="text-align: center;"><select name="secondVarReferee">
                                    <option value="" disabled selected>Hakem Seçiniz</option>{{#each ../referee}}<option
                                        value="{{_id}}" {{#if (eqIds _id ../secondVarReferee)}} selected {{/if}}>
                                        {{refereeName}} {{refereeSurName}} </option>{{/each}}
                                </select></td>
                            <td>
                                <input type="hidden" name="_method" value="PUT">
                                <button type="submit" class="redButton"
                                    style="width: 5em;height:max-content;">Düzenle</button>
                            </td>
                    </form>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>


{{>sessionFlashMessage}}

