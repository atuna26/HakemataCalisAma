<div class="container mx-3" style="margin-left: 0;">
    <div class="row justify-content-center">
        {{>left-navMain}}
        <div
            class="uk-card uk-card-default uk-card-large uk-card-body uk-card-hover justify-content-center col-md-5 my-3">


            <h3 class="uk-card-title text-center">Fikstür Oluştur</h3>
            <p class="uk-text-meta uk-margin-remove-top text-center">Gerekli bilgileri seçtikten sonra fikstür
                kendiliğinden oluşturulacaktır.</p>
            <hr class="uk-divider-icon">
            <form action="/ayarlar/fixture/league" method="POST">

                <div class="row">
                    <div class="col-md-12">
                        <h2 class="uk-card-title text-center">Fikstür Bilgileri</h2>
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <select class="uk-select" id="" name="scheduleLeague" aria-label="Hakem Seçiniz: ">
                                    <option value="" disabled selected>Grup Seçiniz</option>
                                    {{#each group}}
                                    <option value="{{_id}}">{{leagueName.leagueName}} - Grup {{add @index 1}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-12 my-3">
                                <input class="uk-input" type="number" name="season" required placeholder="Lig Sezonu"
                                    min="0" aria-label="Lig Sezonu">
                            </div>
                            <div class="row justify-content-center column-gap-2 my-4" style="">
                                <button class="greenButton col-md-4" type="submit">Oluştur</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <div
            class="uk-card uk-card-default uk-card-large uk-card-body uk-card-hover justify-content-center col-md-6 my-3">
            <h3 class="uk-card-title text-center">Maç Oluştur</h3>
            <p class="uk-text-meta uk-margin-remove-top text-center">Maç Oluşturmak için gerekli bilgileri giriniz.</p>
            <hr class="uk-divider-icon">
            <form action="/ayarlar/fixture/playoff" method="POST">

                <div class="row">
                    <div class="col-md-12">
                        <h2 class="uk-card-title text-center">Maç Bilgileri</h2>
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <select class="uk-select" id="" name="homeTeam" aria-label="Hakem Seçiniz: ">
                                    <option value="" disabled selected>Ev Takımı Seçiniz</option>
                                    {{#each team}}
                                    <option value="{{_id}}">{{leagueName.leagueName}} - {{teamName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-12 my-3">
                                <select class="uk-select" id="" name="awayTeam" aria-label="Hakem Seçiniz: ">
                                    <option value="" disabled selected>Deplasman Takımı Seçiniz</option>
                                    {{#each team}}
                                    <option value="{{_id}}">{{leagueName.leagueName}} - {{teamName}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <input class="uk-input" type="number" name="season" required
                                        placeholder="Lig Sezonu" min="0" aria-label="Lig Sezonu">
                                </div>
                                <div class="col-md-4">
                                    <input class="uk-input" type="date" name="derbyDate" required>
                                </div>
                                <div class="col-md-2">
                                    <select class="uk-select" name="derbyHours" id="">
                                        <option value="09">09</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                        <option value="19">19</option>
                                        <option value="20">20</option>
                                        <option value="21">21</option>
                                        <option value="22">22</option>
                                        <option value="23">23</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <select class="uk-select" name="derbyMinutes" id="">
                                        <option value="00">00</option>
                                        <option value="30">30</option>

                                    </select>
                                </div>
                            </div>

                            <div class="row justify-content-center column-gap-2 my-4" style="">
                                <button class="greenButton col-md-4" type="submit">Oluştur</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="uk-table uk-table-striped uk-table-hover">
                <thead>
                    <tr>
                        <th>Ev Takımı</th>
                        <th>Deplasman Takımı</th>
                        <th>Maç Tarihi <button onclick="toggleTable()"><i class="fa-solid fa-eye"></i></button></th>
                        <th class="refereeFixture">Maç Saati</th>
                        <th class="refereeFixture">Orta Hakem</th>
                        <th class="refereeFixture">Yan Hakem</th>
                        <th class="refereeFixture">2. Yan Hakem</th>
                        <th class="refereeFixture">Dördüncü Hakem</th>
                        <th class="refereeFixture">VAR Hakem</th>
                        <th class="refereeFixture">2. VAR Hakem</th>
                        <th>Kaydet</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each fixture}}
